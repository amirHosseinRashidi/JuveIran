<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorPrimary"
    android:layoutDirection="rtl">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bc_header" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/layout_headerNavigation_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/layout_headerNavigation_userName"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/bc_login2_phone"
        app:riv_corner_radius="40dp" />


    <com.khayyamapp.juveiran.custom_views.IranSansTextView
        android:id="@+id/layout_headerNavigation_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_medium"
        android:text="@string/layout_headerNavigation_guest"
        android:textColor="@color/textColor"
        android:textSize="14sp" />

</RelativeLayout>
