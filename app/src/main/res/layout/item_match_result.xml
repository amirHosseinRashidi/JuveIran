<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/radius_normal"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.khayyamapp.juveiran.custom_views.IranSansTextView
            android:id="@+id/tv__iMatchResult_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSize_small"
            tools:text="۲۶ اسفند ۱۳۹۷ ساعت ۱۵:۰۰" />

        <LinearLayout
            android:id="@+id/ll_iMatchResult_teamsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv__iMatchResult_date"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_iMatchResult_awayTeamImage"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:src="@drawable/logo_juveiran" />

                <com.khayyamapp.juveiran.custom_views.IranSansTextView
                    android:id="@+id/tv_iMatchResult_awayTeamNAme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize_small"
                    tools:text="یوونتوس" />

                <com.khayyamapp.juveiran.custom_views.IranSansTextView
                    android:id="@+id/tv_iMatchResult_awayGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    tools:text="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_iMatchResult_homeTeamImage"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:src="@drawable/logo_juveiran" />

                <com.khayyamapp.juveiran.custom_views.IranSansTextView
                    android:id="@+id/tv_iMatchResult_homeTeamNAme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize_small"
                    tools:text="یوونتوس" />

                <com.khayyamapp.juveiran.custom_views.IranSansTextView
                    android:id="@+id/tv_iMatchResult_homeTeamGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    tools:text="1" />
            </LinearLayout>

        </LinearLayout>


        <com.khayyamapp.juveiran.custom_views.IranSansTextView
            android:id="@+id/btn__iMatchResult_showDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_iMatchResult_teamsContainer"
            android:layout_margin="@dimen/margin_medium"
            android:gravity="center"
            android:text="مشاهده آمار بازی"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSize_small" />

    </RelativeLayout>

</android.support.v7.widget.CardView>