<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_large"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_medium">

        <com.khayyamapp.juveiran.custom_views.IranSansTextView
            android:id="@+id/tv_iMatchDetail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSize_small"
            tools:text="مالکیت" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">

            <com.khayyamapp.juveiran.custom_views.IranSansTextView
                android:id="@+id/tv_iMatchDetail_awayTeamScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_weight="1"
                android:gravity="center"
                android:text="40%"
                android:textColor="@color/colorPrimaryDark" />

            <View
                android:id="@+id/v_iMatchDetail_divider"
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:background="@color/colorPrimaryDark"
                android:visibility="gone" />

            <com.khayyamapp.juveiran.custom_views.IranSansTextView
                android:id="@+id/tv_iMatchDetail_homeTeamScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_weight="1"
                android:gravity="center"
                android:text="40%"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_iMatchDetail_rangeContainer"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_medium"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>