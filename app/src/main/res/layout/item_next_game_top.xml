<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layoutDirection="rtl">


    <ImageView
        android:id="@+id/img_iNextGames_stadiumPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="#81000000"
        android:scaleType="center"
        android:src="@drawable/pic_stadium" />

    <LinearLayout
        android:id="@+id/ll_iNextGames_awayTeamContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_medium"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_iNextGames_awayLogo"
            android:layout_width="@dimen/size_teamLogos"
            android:layout_height="@dimen/size_teamLogos"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/margin_medium"
            tools:src="@drawable/logo_transparent_juveiran" />

        <com.khayyamapp.juveiran.custom_views.IranSansTextView
            android:id="@+id/tv_iNextGames_awayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize_big"
            tools:text="یوونتوس" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ll_iNextGames_homeTeamContainer"
        android:layout_toEndOf="@id/ll_iNextGames_awayTeamContainer"
        android:orientation="vertical">

        <com.khayyamapp.juveiran.custom_views.IranSansTextView
            android:id="@+id/tv_iNextGames_gameDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize_xsmall"
            tools:text="۱۳ فروردین ۱۳۹۸ ساعت ۲۳:۳۰" />

        <com.khayyamapp.juveiran.custom_views.IranSansTextView
            android:id="@+id/tv_iNextGames_gameTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize_xsmall"
            tools:text=" ساعت ۲۳:۳۰" />

        <com.khayyamapp.juveiran.custom_views.IranSansTextView
            android:id="@+id/tv_iNextGames_stadium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize_xsmall"
            tools:text="استادیوم ساردینیا آرنا" />

        <com.khayyamapp.juveiran.custom_views.IranSansTextView
            android:id="@+id/tv_iNextGames_leagueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize_xsmall"
            tools:text="سری آ" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_iNextGames_homeTeamContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_small"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_iNextGames_homeLogo"
            android:layout_width="@dimen/size_teamLogos"
            android:layout_height="@dimen/size_teamLogos"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/margin_medium"
            tools:src="@drawable/logo_transparent_juveiran" />

        <com.khayyamapp.juveiran.custom_views.IranSansTextView
            android:id="@+id/tv_iNextGames_homeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize_big"
            tools:text="یوونتوس" />

    </LinearLayout>


</RelativeLayout>